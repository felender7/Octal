      <div class="col-md-8 col">
        <h4><i class="far fa-list-alt"></i> How can we help?</h4>
      </div>
      <div class="col">
        <%= link_to new_support_path, class: 'btn btn-primary btn-sm float-right' do %>
        <i class="fas fa-plus-square"></i> Compose
        <% end %>
      </div>
    </div>
  </div>


  <div class="shadow-sm p-3 mb-5 bg-white">
  <div class="row">
