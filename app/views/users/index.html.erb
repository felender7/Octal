<div class="container-fluid mt-5">
  <div class="shadow-sm p-3 bg-dark text-light border-top-reviews ">
      <div class="row">
        <div class="col-md-8">
          <h4><i class="far fa-list-alt"></i> All users </h4>

        </div>
        <div class="col-md-4">
          <a href="/users" class="float-right text-danger"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a>
        </div>
      </div>
  </div>
        <%@users.each do |user|%>
        <div class="row">
        <div class="col-xl-12">
            <!-- Dashboard info widget 1-->

            <div class="card border-top-0 border-bottom-0 border-right-0 border-left-lg border-primary h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                          <%if user.admin?%>
                          <div class=" font-weight-bold text-secondary mb-1"><i class="fas fa-user text-danger"></i> <%=user.name %></div>
                          <%else%>
                            <div class=" font-weight-bold text-secondary mb-1"><%=user.name %></div>
                            <%end%>
                            <small class="badge badge-pill badge-primary">#0<%=user.id%></small>
                            <small class="badge badge-pill badge-success"><%=user.email%></small> <br>
                              <span class="small text-secondary">Created <%=time_ago_in_words(user.created_at) +" ago" %></span>
                        </div>
                        <div class="ml-2"><i class="fas fa-user-astronaut fa-2x text-gray-200"></i></div>
                    </div>
                    <hr>
                    <%=link_to user do%>
                    <i class="fas fa-external-link-alt"></i> view
                    <%end%>
                </div>
            </div>

          </div>
          </div> <br>
          <%end%>
