
<div class="container-fluid mt-5">
  <div class="shadow-sm p-3 bg-dark text-light border-top-reviews ">
      <div class="row">
        <div class="col-md-8">
          <h4><i class="far fa-list-alt"></i>

            <%= @user.name %> </h4>
          <small><%=@user.email%></small>
        </div>
        <div class="col-md-4">
          <a href="/users" class="float-right text-danger"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a>
        </div>
      </div>
  </div>

  <%@display_questions.each do |display_question| %>
  <div class="shadow-sm p-3 bg-white border-top-reviews">
  <div class="row">
  <div class="col-lg-12">
    <strong><i class="fas fa-tasks"></i> Task:</strong> <%=display_question.task%><br>
    <strong><i class="fas fa-layer-group"></i> Level:</strong> <%=display_question.level%><br>
    <strong><i class="fas fa-archive"></i> Course:</strong><%=display_question.course%> <hr>
    <strong> <i class="fas fa-question-circle"></i> Question:</strong>
    <small><%=display_question.question%></small><br><br>
    <% if display_question.code.present?%>
    <%= link_to display_question.code, download:'' , class:"btn btn-primary btn-sm" do %>
      <i class="fas fa-file-download text-light" data-toggle="tooltip" title="Download" ></i> Download code
      <%end%>
     <%end%>
    </div>
  </div>
  </div>
  <br>
<%end%>
</div>
